
{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/app.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-store" }
        ]
      },
      {
        "source": "/protected_enc/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=300" }
        ]
      },
{
  "source": "/key.json",
  "headers": [
    { "key": "Cache-Control", "value": "no-store" }
  ]
}
    ]
  }
}
